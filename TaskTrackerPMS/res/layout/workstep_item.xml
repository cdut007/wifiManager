<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workstep"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/white"
    android:layout_gravity="center_vertical"
    android:minHeight="50dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:padding="4dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/workstep_index_item"
            style="@style/common_text_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:singleLine="true"
            android:text="1" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" />

        <com.thirdpart.widget.SorcllTextView
            android:id="@+id/workstep_name"
            android:layout_width="0dp"
             style="@style/common_text_item"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="problem" />


        <com.thirdpart.widget.TouchImage
            android:id="@+id/issue_feedback"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_margin="4dp"
            android:textSize="14sp"
            android:singleLine="true"
            android:src="@drawable/wtfk" />


        <TextView
            android:id="@+id/issue_update"
            style="@style/common_done_btn"
            android:layout_width="0dp"
             android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="2sp"
            android:textSize="12sp"
            android:gravity="center"
            android:singleLine="true"
            android:src="@drawable/gengxin"/>
    </LinearLayout>
 <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_line_width"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:background="@color/item_line" />
</LinearLayout>