<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widgets="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/app_bg_color" >
	   
     <com.thirdpart.widget.ChooseItemView 
         android:id="@+id/witness_choose_ok"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         widgets:customName="见证结果："
          widgets:tinySpec="true"
     />
     <com.thirdpart.widget.DisplayItemView
         android:id="@+id/witness_display_ok"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         widgets:customName="见证结果："
         android:visibility="gone"
     />
      <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_line_width"
            android:background="@color/item_line" />
	<com.thirdpart.widget.UserInputItemView 
         android:id="@+id/witness_result_desc"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         widgets:customName="见证描述"
         
     />
 
      <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_line_width"
            android:background="@color/item_line" />
</LinearLayout>