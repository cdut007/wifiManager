<com.thirdpart.widget.CustomScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/app_bg_color" >

    <LinearLayout
        android:id="@+id/sroll_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@null" >

        
         <LinearLayout 
        android:id="@+id/edit_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"
        android:gravity="top"
        android:padding="10dp"
        android:orientation="vertical"
            >
            
        </LinearLayout>

           <LinearLayout
                android:id="@+id/commit_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/commit_btn"
                    style="@style/common_done_btn"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout> 
    </LinearLayout>

</com.thirdpart.widget.CustomScrollView>