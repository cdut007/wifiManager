<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:widgets="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/app_bg_color" >
	
	<com.thirdpart.widget.UserInputItemView 
         android:id="@+id/issue_plan_desc"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         widgets:customName="解决方案描述"
         
     />
     <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_line_width"
            android:background="@color/item_line" />
     <com.thirdpart.widget.ChooseItemView 
         android:id="@+id/issue_choose_deliver"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="10dp"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         widgets:customName="指派给："
          widgets:tinySpec="true"
     />
      <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_line_width"
            android:background="@color/item_line" />
        <LinearLayout 
             android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            >
            <CheckBox
            android:id="@+id/issue_solved_check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:singleLine="true"/>
            
            <TextView
            android:id="@+id/issue_solve_tips"
            style="@style/common_text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:singleLine="true"
            android:text="是否解决" />
        </LinearLayout>
</LinearLayout>