<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:padding="10dp"
    android:layout_gravity="center">

    <FrameLayout
        android:id="@+id/cricle_contaner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center"
        android:orientation="horizontal" >

      <ImageView
  		    android:layout_marginLeft="10dp"
            android:id="@+id/common_circle_item_img"
            android:layout_width="@dimen/task_icon_img_Heigth"
            android:layout_height="@dimen/task_icon_img_Heigth"
            android:gravity="center_vertical" />

        <TextView
            android:id="@+id/common_circle_item_content"
            android:layout_width="@dimen/task_icon_img_Heigth"
             style="@style/common_text_item"
            android:layout_height="@dimen/task_icon_img_Heigth"
            android:gravity="center"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:singleLine="true"
            android:text="problem" />

      
    </FrameLayout>

</LinearLayout>