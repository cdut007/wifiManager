<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@drawable/menu_bg"
    android:baselineAligned="false"
    android:gravity="center"
    android:orientation="horizontal" >

    
    <LinearLayout
        android:id="@+id/btn_menu0"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" >

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:scaleType="centerInside"
            android:src="@drawable/tab_menu_bg_item_home" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="@string/tab_menu_text0"
            android:textColor="@color/nav_text_color_state" />
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/btn_menu1"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" >

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:scaleType="centerInside"
            android:src="@drawable/tab_menu_bg_item0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="@string/tab_menu_text1"
            android:textColor="@color/nav_text_color_state" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/btn_menu2"
         android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" >

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:scaleType="centerInside"
            android:src="@drawable/tab_menu_bg_item1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="@string/tab_menu_text2"
            android:textColor="@color/nav_text_color_state" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/btn_menu3"
         android:gravity="center"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1.0" >

        <ImageView
            android:layout_width="31dp"
            android:layout_height="31dp"
            android:scaleType="centerInside"
            android:src="@drawable/tab_menu_bg_item2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:text="@string/tab_menu_text3"
            android:textColor="@color/nav_text_color_state" />
    </LinearLayout>

</LinearLayout>